<?xml version="1.0" encoding="utf-8"?>



<android.support.v7.widget.CardView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
app:contentPadding="0dp" android:layout_marginRight="15dp"
app:cardUseCompatPadding="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:contentPadding="0dp">

        <ImageView
            android:id="@+id/ImageViewint"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:tint="#64282626"
            android:tintMode="src_over"
            android:adjustViewBounds="false"
            android:src="@drawable/user"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/name_int"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Gabriel Rodriguez"
            android:textColor="@color/background_material_dark"
            android:textSize="10dp"
            android:layout_alignParentEnd="false"
            android:textStyle="bold"
            android:layout_margin="2dp" />

        <TextView
            android:id="@+id/text_int"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="hghgh"
            android:textColor="#544f4f"
            android:textSize="10dp"
            android:layout_alignParentEnd="false"
            android:layout_margin="2dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="SEND A TOST"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:singleLine="false"
            android:gravity="center_horizontal"
            android:background="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="14dp"
            android:padding="5dp"
            android:textColor="@color/abc_primary_text_material_dark" />


    </LinearLayout>

</android.support.v7.widget.CardView>